@model KorvMackaMedOst.ViewModels.TodoViewModel
@{
    ViewData["Title"] = "Todo";
}

<h1>Todo</h1>
<div>
    <form asp-action="AddItem">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    @foreach (var todoitem in Model.TodoItems)
    {
    <form asp-action="UpdateItem">
        @Html.HiddenFor(x => todoitem.Id)
        @Html.HiddenFor(x => todoitem.UserId)
        @Html.HiddenFor(x => todoitem.ComlpetedDate)
        <div>
            @Html.LabelFor(x=>todoitem.Content)
            <button type="submit"> @Html.CheckBoxFor(x => todoitem.IsCompleted)</button>
        </div>
    </form>
        }
    
</div>